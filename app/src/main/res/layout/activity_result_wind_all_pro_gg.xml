<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    tools:context=".result_wind_all_proGG">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#288AA8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_to_btns_gran">

            <TextView
                android:id="@+id/text_itogs"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Итоги:"
                android:textSize="35dp"
                android:fontFamily="@font/russo_one"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/itog_for_chell"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Цель:"
                android:textColor="@color/gray"
                android:textSize="20dp"
                android:fontFamily="@font/russo_one"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_itogs"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/osn_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/russo_one"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itog_for_chell"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/proizv_reschets"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/color_to_btns"
                android:fontFamily="@font/russo_one"
                android:padding="10dp"
                android:shadowColor="@color/gray"

                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:text="Применить"
                android:textColor="@color/white"

                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@id/linear_monday_res"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/osn_text"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:id="@+id/linear_monday_res"
                android:layout_width="240dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/proizv_reschets"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Понедельник:"
                    android:textSize="16dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/monday_result"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_vtornik_res"
                android:layout_width="240dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_monday_res"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Вторник:"
                    android:textSize="16dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/vtornik_result"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_sreda_res"
                android:layout_width="240dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_vtornik_res"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Среда:"
                    android:textSize="16dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/sreda_result"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_chetv_res"
                android:layout_width="240dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_sreda_res"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Четверг:"
                    android:textSize="16dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/chetv_result"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_friday_res"
                android:layout_width="240dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_chetv_res"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Пятница:"
                    android:textSize="16dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/friday_result"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_subbota_res"
                android:layout_width="240dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_friday_res"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Суббота:"
                    android:textSize="16dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/subbota_result"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_sunday_res"
                android:layout_width="240dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_subbota_res"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Воскресенье:"
                    android:textSize="16dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/sunday_result"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/russo_one"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:gravity="center"
                    />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>