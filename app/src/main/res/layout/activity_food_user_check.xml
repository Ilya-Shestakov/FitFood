<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".food_user_check">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#288AA8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_to_btns_gran">

            <TextView
                android:id="@+id/text_user_check_kk"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Съел:"
                android:textColor="@color/gray"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="30dp"
                android:fontFamily="@font/russo_one" />

            <EditText
                android:id="@+id/edit_text_user_check_kk"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="25dp"
                android:inputType="number"
                android:gravity="center"
                android:hint="0..."
                android:maxLength="5"
                android:textColor="@color/black"
                android:textColorHint="@color/color_for_titles"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_user_check_kk"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_check_in_user_data"
                android:onClick="realiz_method_saving_users_data"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_to_btns"
                android:text="Запомнить"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/russo_one"
                android:gravity="center"

                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="2"
                android:shadowColor="@color/gray"

                app:layout_constraintTop_toBottomOf="@+id/edit_text_user_check_kk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                />

<!--            <ImageButton-->
<!--                android:id="@+id/btn_calc"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_constraintEnd_toStartOf="@+id/btn_check_in_user_data"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="@+id/btn_check_in_user_data"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/btn_check_in_user_data"-->
<!--                android:src="@drawable/baseline_calculate_24"-->
<!--                android:background="@color/color_to_btns"-->
<!--                android:onClick="method_calc"-->
<!--                />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>