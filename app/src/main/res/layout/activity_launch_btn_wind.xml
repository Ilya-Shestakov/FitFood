<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="620dp"
    android:layout_gravity="center"
    tools:context=".launch_btn_wind"
    app:cardCornerRadius="20dp"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_to_btns_gran"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_to_btns_gran">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_kasha_ovs"
                        android:layout_width="match_parent"
                        android:background="@drawable/border_to_text"
                        android:layout_height="70dp"
                        android:text="Суп на мясном бульоне"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Отварная грудка"
                        android:background="@drawable/border_to_text"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/border_to_text"
                        android:text="Котлета (говядина)"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Овощной гарнир"
                        android:background="@drawable/border_to_text"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Зелёный чай"
                        android:background="@drawable/border_to_text"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Чай на шиповнике"
                        android:textStyle="bold"
                        android:background="@drawable/border_to_text"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Овощной суп"
                        android:background="@drawable/border_to_text"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Компот из сухофруктов"
                        android:textStyle="bold"
                        android:background="@drawable/border_to_text"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Овощной салат"
                        android:background="@drawable/border_to_text"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/russo_one"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        />


                </LinearLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>